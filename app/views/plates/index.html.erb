<% if @plates.present?%>
    <h1>
      主题一览：
    </h1>
    <div class="row clearfix">
      <% @plates.each_with_index do |plate, index|%>
          <%if index != 0 && index % 3 == 0%>
              <div class="clearfix"></div>
          <% end %>
          <div class="col-md-4">
            <h2>
              <%= plate.name %>
              <span id="care_plate_<%= plate.id%>">
                <%= render :partial => "plates/care_plate", :locals =>{:plate => plate}%>
              </span>
            </h2>
            <p>
              <%= replace_br plate.info%>
            </p>
            <p>
              <%= link_to "更多 »", "/search?plate_id=#{plate.id}", :class => "btn"%>
            </p>
          </div>
      <% end %>
    </div>
<% end %>