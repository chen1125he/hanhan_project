<% if post.present?%>
<div class="thumbnail">
  <% if post.post_pictures.present?%>
      <div class="my_post_box">
        <%= image_tag post.post_pictures.first.image.url%>
      </div>
  <% end %>
  <div class="caption">
    <h3>
      <%= post.title%>
    </h3>
    <p>
      <%= replace_br post.content%>
    </p>
    <p>
      <%= link_to '详情', post_path(post), :class => 'btn btn-primary'%>
      <%= link_to my_post_path(post), :class => 'btn', :method => :delete, :data => {'confirm' => '确定删除吗？'} do%>
          删除
      <% end %>
      <span class="post_show_message">
                  赞(<%= post.good_num%>)
                  评论(<%= post.comment_num%>)
                </span>
      <span class="post_show_time"><%= post_show_time post.updated_at%></span>
    </p>
  </div>
</div>
<% end %>