<div class="container-fluid login-container">
  <div class="row-fluid clearfix">
    <div class="col-md-12 column mb50">
      <h3 class="text-center">
        用户登陆
      </h3>
    </div>
  </div>
  <div class="row-fluid clearfix">
    <div class="col-md-4 column">
    </div>
    <div class="col-md-4 column">
      <div class="panel-body">
        <hr />
        <%= form_for @user_session, :url => {:controller => 'user_sessions', :action => 'create'}, :method => 'post' do |f| %>
            <div class="form-group">
              <label for="inputEmail3" class="control-label">账号</label>
                <span class="input-icon">
                  <%= f.text_field :login, :class => 'form-control', :id => 'login'%>
                  <i class="fa fa-user"></i>
                </span>
            </div>
            <div class="form-group">
              <label for="inputPassword3" class="control-label">密码</label>
              <div class="">
                <%= f.password_field :password, :class => 'form-control', :id => "inputPassword3"%>
              </div>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn btn-green pull-right">登录</button>
            </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 column">
    </div>
  </div>
</div>
